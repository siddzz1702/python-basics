# Guess the Number Game
import random

print("Welcome to Guess the Number!")
secret = random.randint(1, 20)

while True:
    guess = input("Guess a number between 1 and 20 (or 'done' to quit): ")
    if guess.lower() == "done":
        print(f"The secret number was {secret}. Goodbye!")
        break
    try:
        guess = int(guess)
        if guess < secret:
            print("Too low!")
        elif guess > secret:
            print("Too high!")
        else:
            print("ðŸŽ‰ Correct! You guessed it!")
            break
    except:
        print("Please enter a valid number.")
