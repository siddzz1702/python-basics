# Even / Odd Number Checker
while True:
    num = input("Enter an integer (or 'done' to exit): ")
    if num.lower() == "done":
        break
    try:
        num = int(num)
        if num % 2 == 0:
            print(f"{num} is Even.")
        else:
            print(f"{num} is Odd.")
    except:
        print("Invalid input, please enter an integer.")
